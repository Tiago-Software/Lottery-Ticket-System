<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/lotto"
            app:srcCompat="@drawable/lotto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_middle"
            android:paddingBottom="@dimen/spacing_middle">



            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing_medium"
                android:background="@drawable/button_add"
                android:clickable="true"
                android:text="02"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing_medium"
                android:background="@drawable/button_add"
                android:clickable="true"
                android:text="35"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing_medium"
                android:background="@drawable/button_add"
                android:clickable="true"
                android:text="17"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing_medium"
                android:background="@drawable/button_add"
                android:clickable="true"
                android:text="42"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing_medium"
                android:background="@drawable/button_add"
                android:clickable="true"
                android:text="21"
                android:textSize="20dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing_medium"
                android:background="@drawable/button_add"
                android:clickable="true"
                android:text="10"
                android:textSize="20dp"
                android:textAlignment="center"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_middle"
            android:paddingBottom="@dimen/spacing_middle">

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_medium"
                android:text="Date:"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/ticketDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_medium"
                android:text="29/01/2020"
                android:textAlignment="center"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_middle"
        android:paddingBottom="@dimen/spacing_middle">

        <TextView
            android:id="@+id/textSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:text="Lotto Check v1.5 presented by:"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/Signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:text="Daniel, Tiago and Wesley"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:text="For any queries please contact us on: 078 133 7901"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>



